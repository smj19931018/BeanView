<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:myview="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mycroft.beandemo.MainActivity"
    >

    <com.mycroft.beandemo.view.BeanViewControl
        android:layout_width="match_parent"
        android:layout_height="80dp"
        myview:beancolor="#f15050"
        android:id="@+id/animalview"
        myview:text="下载中："
        myview:textcolor="#7fffee"
        myview:textSize="17sp"
        ></com.mycroft.beandemo.view.BeanViewControl>

    <Button
        android:text="Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/animalview"
        android:layout_alignParentStart="true"
        android:layout_marginStart="80dp"
        android:layout_marginTop="176dp"
        android:id="@+id/button"
        android:onClick="start"/>
</RelativeLayout>
